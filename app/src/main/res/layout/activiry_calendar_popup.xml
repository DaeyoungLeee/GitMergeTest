<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:background="#efefef"
    android:orientation="vertical">

    <!-- 타이틀바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_today"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="날짜"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <!-- //end 타이틀바 -->
        <it.emperor.animatedcheckbox.AnimatedCheckBox
            android:id="@+id/check_sensory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:acb_animation_duration="500"
            app:acb_border_checked_color="#000"
            app:acb_border_checked_stroke_width="2dp"
            app:acb_border_not_checked_color="@color/colorRed"
            app:acb_checked="true"
            app:acb_circle_color="#f00"
            app:acb_hook_color="#fff"
            android:onClick="onclick1"
            app:acb_hook_stroke_width="1dp"
            app:acb_padding="20dp" />

        <it.emperor.animatedcheckbox.AnimatedCheckBox
            android:id="@+id/check_language"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:acb_animation_duration="500"
            app:acb_border_checked_color="#000"
            app:acb_border_checked_stroke_width="2dp"
            app:acb_border_not_checked_color="@color/colorBlue"
            app:acb_checked="true"
            app:acb_circle_color="@color/colorBlue"
            app:acb_hook_color="#fff"
            app:acb_hook_stroke_width="1dp"
            app:acb_padding="20dp" />

        <it.emperor.animatedcheckbox.AnimatedCheckBox
            android:id="@+id/check_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:acb_animation_duration="500"
            app:acb_border_checked_color="#000"
            app:acb_border_checked_stroke_width="2dp"
            app:acb_border_not_checked_color="@color/colorYellow"
            app:acb_checked="true"
            app:acb_circle_color="@color/colorYellow"
            app:acb_hook_color="#fff"
            app:acb_hook_stroke_width="1dp"
            app:acb_padding="20dp" />

        <it.emperor.animatedcheckbox.AnimatedCheckBox
            android:id="@+id/check_physical"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:acb_animation_duration="500"
            app:acb_border_checked_color="#000"
            app:acb_border_checked_stroke_width="2dp"
            app:acb_border_not_checked_color="@color/colorGreen"
            app:acb_checked="true"
            app:acb_circle_color="@color/colorGreen"
            app:acb_hook_color="#fff"
            app:acb_hook_stroke_width="1dp"
            app:acb_padding="20dp" />

        <it.emperor.animatedcheckbox.AnimatedCheckBox
            android:id="@+id/check_occupation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:acb_animation_duration="500"
            app:acb_border_checked_color="#000"
            app:acb_border_checked_stroke_width="2dp"
            app:acb_border_not_checked_color="@color/colorPink"
            app:acb_checked="true"
            app:acb_circle_color="@color/colorPink"
            app:acb_hook_color="#fff"
            app:acb_hook_stroke_width="1dp"
            app:acb_padding="20dp" />

    </LinearLayout>
    <!-- Notice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작 시간"
            android:textColor="#000000" />

        <TimePicker
            android:id="@+id/time_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종료 시간"
            android:textColor="#000000" />

        <TimePicker
            android:id="@+id/time_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />


    </LinearLayout>


    <!-- Notice -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bdbdbd" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:gravity="center"
            android:padding="16dp"
            android:text="취소"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_okay"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="2"
            android:background="@drawable/white_rec_button"
            android:gravity="center"
            android:padding="16dp"
            android:text="저장"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>