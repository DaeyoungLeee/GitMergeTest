                    </LinearLayout>
                </com.sothree.slidinguppanel.SlidingUpPanelLayout>

                <com.sothree.slidinguppanel.SlidingUpPanelLayout
                    android:id="@+id/Q4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
