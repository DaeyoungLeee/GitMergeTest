                    </LinearLayout>
                </com.sothree.slidinguppanel.SlidingUpPanelLayout>

                <com.sothree.slidinguppanel.SlidingUpPanelLayout
                    android:id="@+id/Q5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:layout_marginTop="200dp"
                    sothree:umanoFadeColor="#000000"
                    sothree:umanoPanelHeight="50dp"
                    sothree:umanoShadowHeight="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="tjfasadkasdmk 0000000000000000000000000000000000000000000000a0000000000000000000000000000000000000000000000a0000000000000000000000000000000000000000000000a0000000000000000000000000000000000000000000000a" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Q5. 화장실 이용을 무서워할 때" />
                    </LinearLayout>
                </com.sothree.slidinguppanel.SlidingUpPanelLayout>

            </RelativeLayout>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>